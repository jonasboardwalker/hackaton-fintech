{
  "extends": "@admin-shad-template/typescript-config/base.json",
  "include": ["src", "scripts"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true
  }
} 